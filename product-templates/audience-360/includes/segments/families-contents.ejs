<script>
	const triggerAnimations = () => {
		if (window.scrollY > 250) {
			document.querySelectorAll('#channel-engagement svg .grow-circle').forEach(elm => elm.style.animationPlayState = 'running');
		}

		if (window.scrollY > 650) {
			document.querySelectorAll('#transaction-overview svg .grow-donut').forEach(elm => elm.style.animationPlayState = 'running');
		}

		if (window.scrollY > 900) {
			document.querySelectorAll('#transaction-overview svg .draw-in, #transaction-overview svg .fill-in').forEach(elm => elm.style.animationPlayState = 'running');
		}
	};

	document.addEventListener("scroll", triggerAnimations);
</script>