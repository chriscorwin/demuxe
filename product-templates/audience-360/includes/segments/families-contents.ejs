<style>
	#contact-details svg, #addtnl-prof-info svg, #channel-engagement svg, #preferred-conversion-path .slds-panel-box__body svg, #spending-profile .slds-panel-box__body svg, #transaction-overview svg{
		margin-left: 12px;
		margin-bottom: 12px;
	}

	#addtnl-prof-info svg{
		margin-bottom: 45px;
	}

	#spending-profile .slds-panel-box__body svg {
		margin-bottom: 17px;
	}

	#transaction-overview svg {
		margin-bottom: 88px;
	}

	.page-header svg{
		width: 100%;
	}

	.slds-panel-box  {
		box-shadow: 0 2px 2px 0 rgba(0,0,0,.1);
	}

	#spending-profile .slds-panel-box__header button:nth-of-type(1) {
		margin-left: 185px;
	}

	.grow-circle {
		animation: grow-circle 2s linear;
		stroke-dashoffset: 0;
		stroke-dasharray: 100;
		transform-origin: 75.5px;
		animation-play-state: paused;
	}

	@keyframes grow-circle {
		from {
			stroke-dashoffset: 100;
		}
	}

	#transaction-overview svg circle {
		transform-origin: 113px 176px;
	}
	#OvalDarkBlue {
		animation: grow-donut 1.5s linear;
		animation-play-state: paused;
		transform: rotate(98deg);
	}
	#OvalLightBlue {
		animation: grow-donut 1.5s linear;
		animation-play-state: paused;
		transform: rotate(195deg);
	}
	#OvalPurple {
		animation: grow-donut 1.5s linear;
		animation-play-state: paused;
		transform: rotate(268deg);
	}

	@keyframes grow-donut {
	    from {
	        stroke-dasharray: 700;
  			stroke-dashoffset: 0;
  			transform: rotate(0deg);
	    }
	}

	.fill-in {
		animation: send-lines 2s linear;
		animation-play-state: paused;
		fill-opacity: 0.3;
	}

	@keyframes send-lines {
		from {
			fill-opacity: 0;
		}

		50% {
			fill-opacity: 0;
		}

		to {
			fill-opacity: 0.3;
		}
	}

	.draw-in {
		animation: draw-in-animation 1s linear;
		animation-play-state: paused;
		stroke-dasharray: 350px;
	}

	@keyframes draw-in-animation {
		from {

			stroke-dashoffset: 350px;
		}

		to {
			stroke-dashoffset: 0px;
		}
	}
</style>
