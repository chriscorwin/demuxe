<%
	const selected = (locals.isSelected && locals.isSelected === true) ? ' slds-is-selected' : '';
	const disabled = (locals.isDisabled && locals.isDisabled === true) ? ' disabled=""' : '';
	const variant = (locals.variant) ? ` slds-button_${locals.variant}` : ' slds-button_neutral';
	const button_icon = (!locals.text && (locals.iconPath || locals.imgPath)) ? ` slds-button_icon slds-button_icon-more slds-button_icon-border-filled` : '';
	const svg_class = (locals.text) ? ` slds-button__icon_left` : '';
%>
	<button class="slds-button<%=button_icon%><%=variant%><%=selected%>"<%=disabled%> title="<%=locals.title%>" aria-pressed="false">

	<%= (locals.iconOnRight) ? locals.text : '' %>

	<% if (locals.iconPath) { %>
		<svg class="slds-button__icon<%=svg_class%>" aria-hidden="true">
			<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="<%=locals.iconPath%>" />
		</svg>
	<% } else if (locals.imgPath) { %>
		<img class="slds-button__icon<%=svg_class%>" src="<%=locals.imgPath%>" style="<%=locals.style%>"/>
	<% } %>

	<%= (!locals.iconOnRight) ? locals.text : '' %>

	<% if (locals.hasOverflow) { %>
			<svg class="slds-button__icon slds-button__icon_x-small" aria-hidden="true">
				<use xlink:href="/icons/utility-sprite/svg/symbols.svg#down"></use>
			</svg>
	<% } %>

		<span class="slds-assistive-text"><%=locals.title%>></span>
	</button>
